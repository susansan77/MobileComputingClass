<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/tenQuestion"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text=" Ten Question Flag Quiz"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/question1Of"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="Question 1 of 10"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="25"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:src="@drawable/nicaragua_flag" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:paddingBottom="20dp"
        android:gravity="center"
        android:text="@string/guessTheCountry"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_gravity="center_vertical" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="20">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="55"
            >

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Puerto Rico"

                />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Grenada" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nicaragua"

                />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="25"
            >

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Bahamas" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Guatemala" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Aruba" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="25">
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="50"
            >

            <Button

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/selectNumber"
                android:layout_weight="50"
                android:text="Select Number of Choices"
                android:background="@color/black"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="50"
            >

            <Button

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/selectRegions"
                android:layout_weight="50"
                android:text="Select Regions"
                android:background="@color/orange"
                android:textColor="@color/black"

                />

        </TableRow>
    </TableLayout>
</LinearLayout>

